{
  "name": "@usewaypoint/editor-sample-server",
  "version": "1.0.0",
  "description": "Backend server for email builder editor sample",
  "main": "index.js",
  "scripts": {
    "predev": "npm install --legacy-peer-deps 2>/dev/null || true",
    "dev": "concurrently \"tsc --watch\" \"nodemon -w . -w dist index.js\"",
    "build": "tsc",
    "start": "node index.js",
    "test": "jest",
    "postinstall": "node -e \"try { require('gifsicle'); console.log('✅ Gifsicle installed'); } catch(e) { console.warn('⚠️ Gifsicle not found. Run: npm install gifsicle'); }\""
  },
  "dependencies": {
    "@squoosh/lib": "^0.3.1",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "gifsicle": "^5.3.0",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.30.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.9",
    "piexifjs": "^1.0.6",
    "sharp": "^0.33.0",
    "typescript": "^5.3.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  }
}
