{
  "name": "flexibuilder-pro-editor",
  "version": "1.0.0",
  "description": "FlexiBuilder Pro - Flexible Content Builder Frontend Application",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"cd server && npm run dev\"",
    "dev-host": "concurrently \"vite --host 0.0.0.0 --port 5173\" \"cd server && ALLOW_ALL_CORS_DEV=1 npm run dev\"",
    "dev-frontend": "vite --open",
    "dev-backend": "cd server && npm run dev",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^5.15.10",
    "@mui/material": "^5.15.10",
    "@types/uuid": "^10.0.0",
    "@uiw/react-codemirror": "^4.24.2",
    "concurrently": "^9.2.0",
    "dompurify": "^3.2.7",
    "framer-motion": "^12.23.23",
    "react": "^18.2.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^6.0.0",
    "react-toastify": "^11.0.5",
    "uuid": "^11.1.0",
    "zod": "^3.22.4",
    "zustand": "^4.5.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.0.5",
    "@types/html-validator": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^28.0.8",
    "typescript": "^5.2.2",
    "vite": "^5.4.0"
  }
}
